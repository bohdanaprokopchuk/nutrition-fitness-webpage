<!DOCTYPE html>
<html lang="uk">
    <head>
        <%-	include	("./partials/head", {title: "Пост"})	%>
    </head>

<body class="post">
    <%- include ("./partials/userbar") %>
    <%- include ("./partials/header", { active: 2}) %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
    
                <% if (post.image_path) { %>
                    <figure class="card-img-top m-0 overflow-hidden">
                        <img class="img-fluid w-100 object-fit-cover" src="<%= post.image_path %>" alt="<%= post.title %>">
                    </figure>
                    <% } %>
    
                        <h1 class="mb-4 text-center">
                            <%= post.title %>
                        </h1>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="badge bg-primary text-white">
                                <%= post.category %>
                            </span>
                            <span class="text-muted">
                                <%= post.date_created %>
                            </span>
                        </div>
    
    
                        <div class="card mb-4 pb-4">
                            <div class="card-body">
                                <div class="card-text"><%- post.content %></div>
                            </div>
                        </div>
    
                        <div class="d-flex justify-content-between mb-5">
                            <a href="/blog" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Назад до списку
                            </a>
    
                            <% if (user && user.id===1) { %>
    
                                <a href="/edit-post/<%= post.id %>" class="btn btn-primary"
                                    title="Редагувати">Редагувати</a>
    
                                <a href="/new-post" class="btn btn-primary" title="Додати новий пост">
                                    <i class="bi bi-plus-circle"></i> Додати новий пост
                                </a>
                                <% } %>
                        </div>
            </div>
        </div>
    </div>

<%- include ("./partials/footer") %>
</body>
</html>